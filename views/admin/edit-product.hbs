{{!-- Spinner Start --}}
<div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
{{!-- Spinner End --}}




{{!-- Products add form start--}}
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">

        <div class="row">
            <div class="centerdiv pb-5">
                <div class="col-lg-9 col-12">
                    <div class="bg-secondary rounded h-100 p-4">
                        <h6 class="mb-5">EDIT PRODUCT</h6>

                        {{!-- FORM START --}}
                        <form action="/admin/editproduct/{{product._id}}" method="post" enctype="multipart/form-data">

                            <!-- Product name -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Product name</small>
                                <input type="text" class="form-control" id="floatingInput" value="{{product.FPname}}" name="FPname" required>
                            </div>

                            <!-- discription -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Discription</small>
                                <input type="text" class="form-control" id="floatingInput" value="{{product.FPdiscription}}" name="FPdiscription" required>
                            </div>

                            <!-- Catagory -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Catagory</small>
                                <input type="text" class="form-control" id="floatingInput" value="{{product.FPcategory}}" name="FPcategory" required>
                            </div>

                            <!-- Sub Catagory -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Subcategory</small>
                                <input type="text" class="form-control" id="floatingInput" value="{{product.FPsubcategory}}" name="FPsubcategory" required>
                            </div>

                            <!-- orj Price -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Price</small>
                                <input type="number" class="form-control" id="floatingInput" name="FPorjprice" value="{{product.FPorjprice}}" required>
                            </div>

                            <!-- Offer Price -->
                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Offer Price</small>
                                <input type="number" class="form-control" id="floatingInput" name="FPofferprice" value="{{product.FPofferprice}}" required>
                            </div>

                            <div class="form-floating mb-3 text-left">
                                <small class="text-white">Stock</small>
                                <input type="number" class="form-control" id="floatingInput" name="FPStock" value="{{product.FPStock}}" required>
                            </div>

                            <!-- Main image -->
                            <div class="mb-3 text-left" style="text-align: left; padding-bottom: 1rem;">
                                <small class="text-white ">Main Image</small>
                                <input class="form-control bg-dark mt-2" type="file" id="formFile" name="FPmainimage" multiple required>
                                {{#each product.productImages}}
                                {{!-- <img src="/admin/assets/images/product-images/{{this}}" alt="" width="50px"> --}}
                                <img src="/admin/assets/images/offerproduct-images/{{this}}" alt="oops" width="130px" class="mt-3 me-3">
                                {{/each}}
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="subbutton">Submit</button>


                        </form>
                        {{!-- Form END --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- Products add form END--}}