{{!-- Users Start --}}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">USERS</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0" id="test">
                <thead>
                    <tr class="text-white">
                        <th scope="col">No</th>
                        <th scope="col">User name</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">ID</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{!-- Looping product details --}}
                    {{#each users}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{this.SUusername}}</td>
                        <td>{{this.SUemail}}</td>
                        <td>{{this._id}}</td>
                        <td>
                            {{#if this.block}}
                            <a href="/admin/unBlock/{{this._id}}" class=""><button id="remove"> </i>Unblock</button></a>
                            {{else}}
                            <a href="/admin/block/{{this._id}}" class=""><button id="edit"> Block</button></a>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{!-- Users End --}}

 