                                                                    <button class="btn btn-primary cart-btn" type="button">Add to wishlist</button>
                                                                </li>
                                                                <li class="lnk"> <a data-toggle="tooltip" class="add-to-cart" href="/addtocompare/{{this._id}}" title="Compare"> <i class="fa fa-signal"></i> </a> </li>
                                                            </ul>
                                                            {{/if}}
                                                        </div>
                                                    </div>
                                                    <!--Cart , compare , wishlist End-->
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- new prodcuts Outer body -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
